package com.niit.RestController;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.niit.dao.ForumCommentsDao;

@RestController
@RequestMapping("api")
public class ForumCommentsController {
@Autowired
ForumCommentsController forumComments;

@Autowired
ForumCommentsDao forumCommentsDao;

@GetMapping(value = "allForumComments/{id}")
public ResponseEntity<List<ForumComments>> getallForumComments(@PathVariable("id") int id) {
	List<ForumCommentsController> allForumComments = (List<ForumComments>) forumCommentsDao.getAllComments(id);
	return new ResponseEntity<List<ForumCommentsController>>(allForumComments, HttpStatus.OK);
}

@PutMapping(value="deleteForumComments/{id}")
@ResponseBody
public ResponseEntity<ForumCommentsController> deleteForumComments(@PathVariable("id") int id){
	
	forumCommentsDao.deleteForumComment(id);
	return new ResponseEntity<ForumCommentsController>(HttpStatus.OK);
	
}

}

